<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#B4D5E4">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/Sno_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="11dp"
        android:padding="5dp"
        android:text="Hod"
        android:textSize="13dp"
        app:layout_constraintEnd_toStartOf="@+id/cat_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/cat_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="3dp"
        android:padding="4dp"
        android:text="Location"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/item_tv"
        app:layout_constraintStart_toEndOf="@+id/Sno_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        android:paddingLeft="45dp"
        android:paddingTop="6dp"
        android:paddingBottom="5dp"
        android:text="Item"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/qunatity_tv"
        app:layout_constraintStart_toEndOf="@+id/cat_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qunatity_tv"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_marginEnd="3dp"
        android:paddingTop="5dp"
        android:layout_marginTop="5dp"
        android:text="Id"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_tv"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>